<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P02.Pages.Creditos"
             Title="Creditos">
    <StackLayout Padding="20">
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Spacing="20" HorizontalOptions="Center">
                <Label Text="Creditos" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" TextColor="White" />

                <Label Text="Desenvolvido por Alisson de Sousa e Leonardo de Fontes" 
                       FontAttributes="Bold" 
                       FontSize="Subtitle" 
                       Margin="0, 0, 5, 0" 
                       TextColor="White" 
                       HorizontalOptions="Center" />
            </StackLayout>
        </ScrollView>

        <Button
         Style="{StaticResource BtnOutline}"
         Margin="0, 20, 0, 0"
         Text="Voltar"
         Clicked="OnBack"/>
    </StackLayout>
</ContentPage>

